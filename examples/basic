
-- 0     =    Π X :[id] ★ → X
-- 1     =    Π X :[id] ★ → Π x :[id] X → X
-- tt    =    λ X :[id] ★ → λ x :[id] X → x
-- 2     =    Π X :[id] ★ → Π x :[id] X → Π x :[id.1] X → X
-- true  =    λ X :[id] ★ → λ x :[id] X → λ y :[id.1] X → x
-- false =    λ X :[id] ★ → λ x :[id] X → λ y :[id.1] X → y


(λ X :[id] ★ → λ x :[id] X → λ y :[id.1] X → x)
    ★
    (Π X :[id] ★ → X)
    (Π X :[id] ★ → Π x :[id] X → X)



